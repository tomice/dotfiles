" vimrc
source $VIMRUNTIME/vimrc_example.vim
set number          " show line numbers
set visualbell      " flash screen instead of making a noise
set tabstop=4       " width of tab
set expandtab       " convert tab to spaces
set shiftwidth=4    " number of spaces per auto indent
set softtabstop=4   " backspace will remove n number of spaces
set autoindent      " copy indent from previous line
set smartindent     " indent after brackets and such
set incsearch       " search as text is entered
set hlsearch        " highlight matches
set ruler           " show line and col number of cursor at bottom right
set laststatus=2    " show status bar at bottom
